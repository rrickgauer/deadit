
<form class="signup-form">

    @* Email *@
    <div class="signup-form-input-section email input-feedback">
        <label class="form-label-container">
            <div class="form-label">Email address</div>
            <input type="email" class="form-control input-feedback-input" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback"></div>
        </label>
    </div>

    @* Username *@
    <div class="signup-form-input-section username input-feedback">
        <label class="form-label-container">
            <div class="form-label">Username</div>
            <input type="text" class="form-control input-feedback-input" required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback"></div>
        </label>

        <p class="form-text">Choose wisely—because once you get a name, you can’t change it</p>
    </div>



    @* Password *@
    <div class="signup-form-input-section password input-feedback">
        
        <label class="form-label-container">
            <div class="form-label">Password</div>
            <input type="password" class="form-control input-feedback-input" required minlength="1">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback"></div>
        </label>

        <p class="form-text">Create a strong password by using at least 8 characters, including a mix of uppercase and lowercase letters, numbers, and special characters</p>
    </div>



    @* Action buttons *@
    <div class="signup-form-input-section d-flex">
        <button type="submit" class="btn btn-success btn-submit">Sign up</button>
    </div>
</form>