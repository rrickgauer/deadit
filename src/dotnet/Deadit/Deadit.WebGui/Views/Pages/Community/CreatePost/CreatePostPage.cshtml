@* @model Deadit.Lib.Domain.ViewModel.CommunityPageViewModel *@
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http.Extensions;


<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Includes/_Header.cshtml" />
    <title>Create new post</title>
</head>

<body>
    <partial name="~/Views/Includes/_Navbar.cshtml" />
    <partial name="~/Views/Includes/_LoginModal.cshtml" />
    <partial name="~/Views/Components/MessageBoxes/_MessageBoxes.cshtml" />

    <div class="container standard-spacing page-header">
        <h1>Create a post</h1>
        <hr />
    </div>



    <div class="container standard-spacing">

        <button id="btn-standard" class="btn btn-primary">Standard</button>
        <button id="btn-error" class="btn btn-primary">Error</button>
        <button id="btn-success" class="btn btn-primary">success</button>
        <button id="btn-confirm" class="btn btn-primary">confirm</button>

    </div>




    <div class="container standard-spacing">

        @* Tabs *@
        <ul class="nav nav-pills nav-fill standard-spacing" id="create-post-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="create-post-text-tab" data-bs-toggle="tab" data-bs-target="#create-post-text-tab-pane" type="button" role="tab" aria-controls="create-post-text-tab-pane" aria-selected="true">Text</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="create-post-link-tab" data-bs-toggle="tab" data-bs-target="#create-post-link-tab-pane" type="button" role="tab" aria-controls="create-post-link-tab-pane" aria-selected="false">Link</button>
            </li>
        </ul>

        @* Tab Sections *@
        <div class="tab-content" id="create-post-tab-sections">
            
            @* Text form section *@
            <div class="tab-pane show active" id="create-post-text-tab-pane" role="tabpanel" aria-labelledby="create-post-text-tab" tabindex="0">
                <partial name="_TextPostForm.cshtml" />
            </div>

            @* Link post form *@
            <div class="tab-pane" id="create-post-link-tab-pane" role="tabpanel" aria-labelledby="create-post-link-tab" tabindex="0">
                <partial name="_LinkPostForm.cshtml" />
            </div>
        </div>

    </div>

    <partial name="~/Views/Includes/_Footer.cshtml" />
    <script src="~/js/dist/create-post-page.bundle.js"></script>
</body>
</html>