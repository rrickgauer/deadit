@model Deadit.Lib.Domain.ViewModel.PostPageViewModel
@using Microsoft.AspNetCore.Http.Extensions;


<div class="modal modal-comment-moderation" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Moderate Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <div class="content-loader">

                    <div class="content-loader-spinner my-5">
                        <partial name="~/Views/Includes/_SpinnerCenter.cshtml" />
                    </div>

                    <div class="content-loader-content">

                        <form class="comment-moderation-form">

                            <div class="comment-moderation-form-feedback"></div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="comment-moderation-form-check" id="comment-moderation-form-check-lock">
                                <label class="form-check-label" for="comment-moderation-form-check-lock">Lock Comment</label>
                            </div>


                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="comment-moderation-form-check" id="comment-moderation-form-check-remove">
                                <label class="form-check-label" for="comment-moderation-form-check-remove">Remove Comment</label>
                            </div>


                            <div class="d-flex mt-2">
                                <button class="btn btn-success btn-submit" type="submit">Save</button>
                            </div>
                        </form>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
